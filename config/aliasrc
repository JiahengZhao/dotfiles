# Alias
alias sourceroot="source ~/.zshrc"
# alias sourcehere="source install/setup.zsh"

# Highlight cat, depend on highlight pkg.
alias ccat="highlight -O ansi"

# Alias function
sourcehere() {
    source .venv/bin/activate
    source install/setup.zsh
    if [[ ":$PYTHONPATH:" != *":.venv/lib/python3.12/site-packages:"* ]]; then
        export PYTHONPATH=.venv/lib/python3.12/site-packages:$PYTHONPATH
    fi
}